<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:width="16dp"
        android:height="16dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#301976D2" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
    <!-- Main thumb - Blue -->
    <item
        android:width="14dp"
        android:height="14dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#1976D2" />
            <size
                android:width="14dp"
                android:height="14dp" />
        </shape>
    </item>
</layer-list>
